{
  "name": "catchify-core",
  "version": "3.0.8",
  "description": "A collection of front end files to kickstart projects",
  "main": "js/index.js",
  "scripts": {
    "format:js": "node scripts/format.js ./node_modules './js/**/*.js'",
    "format:scss": "node scripts/format.js ./node_modules './sass/**/*.scss'",
    "build": "npm run format:scss && npm run format:js && npm-run-all build:* build:**",
    "build:css": "node scripts/css.js ./node_modules ./sass/styles.scss ./dist ./dist/styles.css",
    "build:css:components": "ls -A1 sass/entrypoints/ | while read f; do node scripts/css.js ./node_modules ./sass/entrypoints/${f%.*}.scss ./dist ./dist/${f%.*}.css; done;",
    "build:js": "node scripts/js.js ./node_modules ./js/index.js ./dist/bundle.js",
    "build:js:components": "ls -A1 js/components/ | while read f; do node scripts/js.js ./node_modules ./js/components/${f%.*}/index.js ./dist/${f%/}.js; done;",
    "test:js": "JASMINE_CONFIG_PATH=js/tests/jasmine.json node ./node_modules/.bin/babel-node --presets node6 ./node_modules/.bin/jasmine",
    "test": "npm run build && npm run test:js",
    "watch:fractal": "fractal start --sync",
    "build:fractal": "fractal build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/catchdigital/catchify.git"
  },
  "author": "Stuart Wilson <s.wilson@catchdigital.com>",
  "contributors": [
    "Alberto Contreras <a.contreras@catchdigital.com>",
    "George Phillips <g.phillips@catchdigital.com>"
  ],
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "^6.7.3",
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-stage-3": "^6.24.1",
    "babelify": "^7.3.0",
    "bootstrap": "^4.4.1",
    "browserify": "^14.1.0",
    "log-timestamp": "^0.1.2",
    "materialize-css": "^1.0.0",
    "node-sass": "^4.13.1",
    "node.normalize.scss": "^3.0.3",
    "postcss-cli": "^6.1.3",
    "prettier": "^1.19.1"
  },
  "engines": {
    "node": "~6.0.0"
  },
  "devDependencies": {
    "@frctl/fractal": "^1.2.1",
    "@frctl/mandelbrot": "^1.2.1",
    "babel-preset-node6": "^11.0.0",
    "jasmine": "^2.99.0",
    "jsdom": "^16.0.1",
    "npm-run-all": "^4.1.5"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "stage-3"
          ]
        }
      ]
    ]
  }
}
